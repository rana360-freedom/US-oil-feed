name: Update RSS Feed

on:
  schedule:
    - cron: "0 8 * * *"     # Daily at 9 AM Lagos
    - cron: "0 16 * * FRI"  # Weekly at 5 PM Lagos
  workflow_dispatch:

jobs:
  update:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'

      - name: Run update script (daily or weekly)
        run: |
          if [ "$(date +%u)" -eq 5 ] && [ "$(date +%H)" -eq 16 ]; then
            python update_feed.py weekly
          else
            python update_feed.py daily
          fi

      - name: Commit changes
        run: |
          git config --global user.name "github-actions"
          git config --global user.email "actions@github.com"
          git add feed.xml
          git commit -m "Automated update"
          git push
